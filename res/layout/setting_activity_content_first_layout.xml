<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10.0dp"
    android:layout_marginRight="10.0dp"
    android:layout_marginTop="10.0dp"
    android:background="@drawable/img_setting_content_bg"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/accountSetting_item"
        android:layout_width="fill_parent"
        android:layout_height="50.0dp"
        android:background="@drawable/setting_top_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/accountSetting_btn_title"
            android:textColor="@color/dark_gray"
            android:textSize="18.0sp" />

        <ImageView
            android:layout_width="12.0dp"
            android:layout_height="12.0dp"
            android:layout_marginRight="10.0dp"
            android:src="@drawable/img_setting_into_icon" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:background="@drawable/setting_line_img" />

    <LinearLayout
        android:id="@+id/account_changePSW_btn"
        android:layout_width="fill_parent"
        android:layout_height="50.0dp"
        android:background="@drawable/setting_bottom_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onChangePwdAction"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/account_changePSW_item"
            android:textColor="@color/dark_gray"
            android:textSize="18.0sp" />

        <ImageView
            android:layout_width="12.0dp"
            android:layout_height="12.0dp"
            android:layout_marginRight="10.0dp"
            android:src="@drawable/img_setting_into_icon" />
    </LinearLayout>

</LinearLayout>